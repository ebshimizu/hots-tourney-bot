{
  "$schema": "http://json-schema.org/schema",
  "title": "match-schema",
  "version": 0,
  "type": "object",
  "properties": {
    "serverId": {
      "type": "string",
      "index": true
    },
    "tournamentId": {
      "type": "string",
      "index": true
    },
    "date": {
      "type": "string"
    },
    "team1": {
      "type": "array",
      "maxItems": 5,
      "item": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      }
    },
    "team2": {
      "type": "array",
      "maxItems": 5,
      "item": {
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      }
    },
    "active": {
      "type": "boolean",
      "default": false
    },
    "roundNumber": {
      "type": "integer"
    }
  },
  "required": ["tournamentId", "serverId", "roundNumber"]
}